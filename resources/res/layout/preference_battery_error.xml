            <TextView android:textAppearance="?android:attr/textAppearanceListItemSecondary" android:textColor="@android:color/secondary_text_default_material_light" android:layout_gravity="end" android:id="@+id/link_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/battery_missing_link_message" android:contentDescription="@string/battery_missing_link_a11y_message"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
