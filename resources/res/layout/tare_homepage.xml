<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <Switch android:id="@+id/on_switch" android:background="?android:attr/colorBackground" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="On"/>
    <TextView android:textColor="?android:attr/textColorSecondary" android:id="@+id/alarmmanager" android:padding="20dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/tare_alarmmanager" android:onClick="launchAlarmManagerPage"/>
    <TextView android:textColor="?android:attr/textColorSecondary" android:id="@+id/jobscheduler" android:padding="20dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/tare_jobscheduler" android:onClick="launchJobSchedulerPage"/>
    <View android:id="@+id/divider" android:background="?android:attr/listDivider" android:layout_width="match_parent" android:layout_height="1dp"/>
    <Button android:id="@+id/revert_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp" android:text="@string/tare_revert" android:onClick="revertSettings" style="@style/ActionPrimaryButton"/>
</LinearLayout>
